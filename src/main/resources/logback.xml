<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                {
                "timestamp":"%d{yyyy-MM-dd HH:mm:ss}", "level":"%level", "logger":"%logger", "thread":"%thread", "requestId":"%X{requestId}", "controller":"%X{controller}", "method":"%X{method}", "message":"%msg"
                }
            </pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
